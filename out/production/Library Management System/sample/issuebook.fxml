<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.IssueBookController">
   <children>
      <Label layoutX="253.0" layoutY="14.0" text="Issue Book" textFill="#a80404">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TableView fx:id="bookTable" layoutX="14.0" layoutY="80.0" prefHeight="200.0" prefWidth="278.0">
      </TableView>
      <Button fx:id="viewButton" layoutX="105.0" layoutY="292.0" mnemonicParsing="false" onAction="#viewAction" text="View Books" textFill="#8a0303">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Label layoutX="314.0" layoutY="80.0" text="Book ID" textFill="#860202">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label layoutX="316.0" layoutY="113.0" text="User ID" textFill="#860303">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="bookIdField" layoutX="430.0" layoutY="78.0" />
      <Button fx:id="issueButton" layoutX="524.0" layoutY="197.0" mnemonicParsing="false" onAction="#issueAction" text="Issue" textFill="#970303">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="backButton" layoutX="526.0" layoutY="292.0" mnemonicParsing="false" onAction="#backAction" text="Back" textFill="#7c0303">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Label layoutX="314.0" layoutY="149.0" text="User Password" textFill="#790303">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <PasswordField fx:id="userPasswordField" layoutX="430.0" layoutY="147.0" />
      <TextField fx:id="userIdField" layoutX="430.0" layoutY="111.0" />
      <DatePicker fx:id="myDatePicker" layoutX="314.0" layoutY="200.0" onAction="#getDateAction" promptText="Enter the date" />
   </children>
</AnchorPane>
